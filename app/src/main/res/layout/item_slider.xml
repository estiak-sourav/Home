<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.jama.carouselview.CarouselView
        android:id="@+id/carouselSliderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:enableSnapping="true"
        app:indicatorAnimationType="drop"
        app:indicatorPadding="5"
        app:indicatorRadius="3"
        app:indicatorSelectedColor="@color/black"
        app:indicatorUnselectedColor="@color/purple_200"
        app:resource="@layout/item_slider_image_view"
        app:size="10"
        app:spacing="20"
        tools:ignore="MissingClass,MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>